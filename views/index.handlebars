{{> partials/index}}

<div class="jumbotron">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>{{this.title}}</h1>
            <h3>{{this.subtitle}}</h3>
        </div>
    </div>
</div>

<div id="articles">
    {{#each articles}}
    <div class="well">
        <div class="row">
            <div class="col col-md-8">
                <h4><a href="{{this.link}}">{{this.title}}</a></h4>
            </div>
            <div class="col col-md-2">
                <form class="form-inline" action="/api/articles/save/{{this.id}}" method="POST">
                    <button type="submit" class="btn btn-primary">Save Article</button>
                </form>
            </div>
            <div class="col col-md-2">
                <form class="form-inline" action="/api/articles/dismiss/{{this.id}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-warning">Dismiss Article</button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>

<style>
.text-center {
    color: darkblue;
    font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
}
h4 a {
    font-family: Georgia, Times, 'Times New Roman', serif;
    color: black;
}
.well{
    background: white;
}
body {
    background-image: url("header.jpg");
}
</style>